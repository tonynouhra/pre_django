[flake8]
# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Exclude these directories from linting
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv/,
    env/,
    .venv/,
    build/,
    dist/,
    *.egg-info/,
    .pytest_cache/,
    .tox/,
    htmlcov/,
    staticfiles/,
    media/

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (black handles this)
    E501

# Files to check
filename = *.py

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True